<body>
    <dmx-serverconnect id="serverconnect1" url="/api/Staff_Login"></dmx-serverconnect>
    <div is="dmx-browser" id="browser1"></div>
    <meta name="ac:route" content="/Staff_Login">
    <header class="bg-light">
        <div class="container">
            <div class="row">
                <div class="col">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-end">
                        <a class="navbar-brand me-auto" href="#">Pain Center</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar1_collapse" aria-controls="navbar1_collapse" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <main>
        <div class="container text-center mt-5">
            <form id="login1" method="post" is="dmx-serverconnect-form" action="/api/Staff_Login" dmx-on:success="browser1.goto('/Staff_Dashboard',true,'Home Page')">
                <div class="row">

                    <div class="row">
                        <div class="col">
                            <h1>Log In</h1>
                            <p class="text-h3">Enter your details below.</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mt-4 offset-3 col-6">
                            <input type="text" id="inp_email" name="Staff_Email" class="form-control" placeholder="Staff Email" required="">
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-6 offset-3">
                            <input type="password" id="inp_password" name="Staff_Password" class="form-control" placeholder="Password" required="">
                            <p class="text-center mt-3"><a href="/Staff_Registration" internal>Don't have an account? Register now.</a></p>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col">
                            <button id="login1_submit" class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </main>
</body>
